{
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["build"]
}
